<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AvelonExplorer.ViewModels"
             x:Class="AvelonExplorer.Controls.FileExplorerDetailsViewControl"
             x:DataType="vm:FileSystemTabViewModel">
    
    <DataGrid ItemsSource="{Binding Items}" 
              SelectedItem="{Binding SelectedItem}"
              DoubleTapped="OnDataGridDoubleTapped"
              AutoGenerateColumns="False"
              IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
            <DataGridTextColumn Header="Type" Binding="{Binding ItemType}" Width="100"/>
            <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="100"/>
            <DataGridTextColumn Header="Modified" Binding="{Binding Modified}" Width="150"/>
        </DataGrid.Columns>
    </DataGrid>

</UserControl>
